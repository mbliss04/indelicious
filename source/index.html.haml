.main
     .logo.col-5.mx-auto.mt4
          %a{href: "/"}
               %img.fit{alt: "indelicious", src: "#{image_path("geo-logo.png")}"}
          %h2.center indelicious

     %ng-view

     .main__archive.ng-cloak.animatedLong.fadeIn
          %ul.main__archive-grid{"ng-controller" => "MixListCtrl"}
               %li.currentMix.mix{"ng-repeat" => "mix in Mix.Mixes.array"}
                    %div{"ng-click" => "ChangeMixtape(mix)", "ng-class" => "{'mixtapes': true, 'playing': mix.id === Mix.PlayingMixID}"}
                         %img.lazy.animated.fadeIn{:alt => "{{mix.title}}", "data-original" => "{{mix.artwork_url}}?h=250&w=250", :height => "250", :src => "/img/grey.jpg", :width => "250"}
                         %span {{mix.title}}

